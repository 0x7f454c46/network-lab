auto lo
iface lo inet loopback
  address 192.0.2.13/32

auto eth0
iface eth0 inet dhcp
  vrf mgmt

auto mgmt
iface mgmt
  address 127.0.0.1/8
  vrf-table auto

auto swp1
iface swp1

auto swp2
iface swp2

auto swp3
iface swp3
  address 203.0.113.13/24

# Bridge configuration
auto bridge1
iface bridge1
  bridge-ports lag1 vni654 vni655
  bridge-vids 654,655
  bridge-vlan-aware yes

auto vni654
iface vni654
  bridge-access 654
  bridge-learning off
  mstpctl-bpduguard yes
  mstpctl-portbpdufilter yes
  vxlan-id 654
  vxlan-local-tunnelip 192.0.2.13

auto vni655
iface vni655
  bridge-access 655
  bridge-learning off
  mstpctl-bpduguard yes
  mstpctl-portbpdufilter yes
  vxlan-id 655
  vxlan-local-tunnelip 192.0.2.13

auto lag1
iface lag1
  bond-slaves swp1 swp2
  mstpctl-bpduguard yes
  mstpctl-portbpdufilter yes
